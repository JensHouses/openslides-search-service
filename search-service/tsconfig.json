{
    "compilerOptions": {
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["ES2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "removeComments": true,
        "rootDir": "./",
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "reflect-metadata", "jest", "@types/jest"]
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules"]
}
